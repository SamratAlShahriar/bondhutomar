<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Main2Activity"
    tools:showIn="@layout/app_bar_main2">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="30dp">



        <LinearLayout

            android:id="@+id/card1"

            android:background="@drawable/card1"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="match_parent">




            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView

                    android:id="@+id/dep"
                    android:layout_marginTop="50dp"
                    android:layout_margin="15dp"
                    android:textSize="24dp"
                    android:textColor="#ffff"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depression"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/depression" />





            </LinearLayout>





        </LinearLayout>






    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp">



        <LinearLayout

            android:id="@+id/card2"

            android:background="@drawable/card2"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="match_parent">




            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView


                    android:layout_marginTop="50dp"
                    android:layout_margin="15dp"
                    android:textSize="24dp"
                    android:textColor="#ffff"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anxiety"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dep" />





            </LinearLayout>





        </LinearLayout>






    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp">



        <LinearLayout

            android:id="@+id/card3"

            android:background="@drawable/card3"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="match_parent">




            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView


                    android:layout_marginTop="50dp"
                    android:layout_margin="15dp"
                    android:textSize="24dp"
                    android:textColor="#ffff"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Insomnia"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/awaken" />





            </LinearLayout>





        </LinearLayout>






    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="20dp">



        <LinearLayout

            android:id="@+id/card4"

            android:background="@drawable/card4"
            android:layout_width="match_parent"

            android:orientation="vertical"
            android:layout_height="match_parent">




            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <TextView


                    android:layout_marginTop="50dp"
                    android:layout_margin="15dp"
                    android:textSize="24dp"
                    android:textColor="#ffff"


                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self-Esteem"/>

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/employee" />





            </LinearLayout>





        </LinearLayout>






    </android.support.v7.widget.CardView>


</LinearLayout>